<h1>Add a definition to <%= @word.word_string() %> </h1>

<form action="/definitions" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>

  <label for='definition_string'>Definition:</label>
  <input id='definition_string' name='definition_string' type='text'>

  <button type="submit">Add Definition</button>
</form>
